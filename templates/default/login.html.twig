{# templates/default/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Login - Gamer's Market{% endblock %}

{% block body %}
    <main class="login-page">
        <div class="login-container">
            <h2 class="login-title">Login</h2>

            {# Flash messages #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">{{ message|raw }}</div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            <form action="{{ path('login') }}" method="POST" class="login-form">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="_username" name="_username" placeholder="Enter your email" required
                           value="{{ last_username }}">
                </div>
                <div class="form-group">
                    <label for="password">Parola</label>
                    <input type="password" id="_password" name="_password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn login-btn">
                    <i class="fas fa-right-to-bracket me-2"></i>Login
                </button>
            </form>

            <p class="signup-text">Nu ai cont? <a href="{{ path('register') }}">Inregistreaza-te!</a></p>
            <p class="signup-text">Iar ai uitat parola? <a href="{{ path('reset_password') }}">Reseteaza aici</a></p>
        </div>
    </main>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}AcasÄƒ - Gamer's Market{% endblock %}

{% block body %}

    <main>
        <section class="hero-carousel">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="{{ asset('images/9070xt.webp') }}" alt="First slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('images/NVIDIA.jpg') }}" alt="Second slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('images/9800x3d.webp') }}" alt="Third slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('images/arcticlf3carousel.webp') }}" alt="Fourth slide" />
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="{{ asset('arcticXtender.jpg') }}" alt="Fifth slide" />
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </section>
    </main>

    <section class="product-grid py-5">
        <div class="container">
            <div class="row g-4">

                {% for i in 1..12 %}
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                        <div class="card h-100 shadow-sm d-flex flex-column justify-content-between">

                            <!-- Product Image -->
                            <a href="#" class="text-decoration-none">
                                <img class="card-img-top" src="{{ asset('images/placeholder.webp') }}" alt="Product {{ i }}">
                            </a>

                            <!-- Card Body -->
                            <div class="card-body text-center d-flex flex-column">
                                <a href="#" class="text-decoration-none text-dark">
                                    <h5 class="card-title">Placeholder {{ i }}</h5>
                                </a>
                                <p class="text-muted">Vendor {{ i }}</p>

                                <!-- Prices -->
                                <div class="mb-2">
                                    <h6>
                                        <s>999 <span>Lei</span></s>
                                        <span class="badge bg-danger ms-2">-10%</span>
                                    </h6>
                                    <h4 class="text-success">899 <span>Lei</span></h4>
                                </div>

                                <!-- Add to Cart Button -->
                                <div class="d-grid gap-2 mt-auto">
                                    <button class="btn btn-primary w-100">
                                        <i class="fa-solid fa-cart-shopping"></i>Add to cart</i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}

            </div>
        </div>
    </section>



{% endblock %}
